<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_padding_50dp"
    android:paddingTop="@dimen/margin_padding_60dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_padding_30dp"
        android:layout_toEndOf="@+id/iv_avatar"
        android:gravity="center"
        android:paddingRight="@dimen/margin_padding_50dp"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="@dimen/font_108" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/button_next"
        android:layout_marginRight="@dimen/margin_padding_20dp"
        android:layout_marginBottom="@dimen/margin_padding_20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_logout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_padding_20dp"
        android:text="Log Out"/>


    <com.example.e7440.bankingproject.components.MovableFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_centerInParent="true"
        android:src="@drawable/baseline_add_circle_black_18dp"/>


    <com.example.e7440.bankingproject.components.MovableButtonAction
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_button"
        android:id="@+id/movable_button"
        android:layout_below="@+id/fab"/>


</RelativeLayout>